@model ViotekErp.Models.SatisAnalizViewModel

@{
    Layout = "_ErpLayout";
    ViewData["Title"] = "Satış Analizi";

    string PeriodLabel(string p) => p switch
    {
        "day" => "Gün",
        "week" => "Hafta",
        "month" => "Ay",
        "year" => "Yıl",
        _ => "Ay"
    };
}

<style>
    /* Tailwind breakpointlerinden bağımsız kesin çözüm */
    .sa-cards { display: none; }   /* default: web */
    .sa-table { display: block; }  /* default: web */

    @@media (max-width: 640px) {
        .sa-cards { display: block; }
        .sa-table { display: none; }
    }
</style>

<div class="min-h-[calc(100vh-64px)] bg-slate-50 px-6 py-6 space-y-6">

    <!-- Başlık -->
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold text-slate-900">Satış Analizi</h1>
            <p class="text-xs text-slate-500 mt-1">
                Siparişler üzerinden dönemsel satış performansı
            </p>
        </div>

        <div class="text-xs bg-white border border-slate-200 rounded-xl px-3 py-2">
            <div class="font-semibold">@PeriodLabel(Model.Period)</div>
            <div class="text-slate-500">
                @Model.StartDate.ToString("dd.MM.yyyy") – @Model.EndDate.ToString("dd.MM.yyyy")
            </div>
        </div>
    </div>

    <!-- Filtre -->
    <div class="bg-white rounded-2xl border border-slate-100 p-4 shadow-sm">
        <form method="get" class="grid grid-cols-1 md:grid-cols-4 gap-4 items-end">

            <div class="md:col-span-2">
                <label class="block text-xs font-semibold text-slate-600 mb-1">Dönem</label>
                <div class="inline-flex rounded-xl border border-slate-200 bg-slate-50 p-1 gap-1">
                    @foreach (var p in new[] { "day", "week", "month", "year" })
                    {
                        var active = Model.Period == p;
                        <a href="@Url.Action("SatisAnaliz", "Raporlar", new { period = p, refDate = Model.RefDate.ToString("yyyy-MM-dd") })"
                           class="px-3 py-2 rounded-lg text-xs font-semibold
                           @(active ? "bg-indigo-600 text-white" : "text-slate-600 hover:bg-white")">
                            @PeriodLabel(p)
                        </a>
                    }
                </div>
            </div>

            <div>
                <label class="block text-xs font-semibold text-slate-600 mb-1">Referans Tarih</label>
                <input type="date"
                       name="refDate"
                       value="@Model.RefDate.ToString("yyyy-MM-dd")"
                       class="w-full rounded-lg border border-slate-200 px-3 py-2 text-sm" />
                <input type="hidden" name="period" value="@Model.Period" />
            </div>

            <div class="flex gap-2">
                <button class="flex-1 bg-indigo-600 text-white rounded-lg px-4 py-2 text-sm">
                    Uygula
                </button>
                <a href="@Url.Action("SatisAnaliz","Raporlar", new { period="month" })"
                   class="px-4 py-2 border border-slate-200 rounded-lg text-xs">
                    Sıfırla
                </a>
            </div>
        </form>
    </div>

    <!-- Özet Kartlar -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="bg-white rounded-2xl p-4 border border-slate-100 shadow-sm hover:shadow-md transition-shadow">
            <div class="text-xs text-slate-500">Toplam Tutar</div>
            <div class="text-xl font-bold text-emerald-600">@Model.TotalAmount.ToString("N2") ₺</div>
            <div class="text-[11px] text-slate-400">Satır: @Model.TotalRows</div>
        </div>

        <div class="bg-white rounded-2xl p-4 border border-slate-100 shadow-sm hover:shadow-md transition-shadow">
            <div class="text-xs text-slate-500">Toplam Miktar</div>
            <div class="text-xl font-bold">@Model.TotalQuantity.ToString("N2")</div>
            <div class="text-[11px] text-slate-400">Dönem: @PeriodLabel(Model.Period)</div>
        </div>

        <div class="bg-white rounded-2xl p-4 border border-slate-100 shadow-sm hover:shadow-md transition-shadow">
            <div class="text-xs text-slate-500">Dönem</div>
            <div class="text-xl font-bold">
                @Model.StartDate.ToString("dd.MM") – @Model.EndDate.ToString("dd.MM")
            </div>
            <div class="text-[11px] text-slate-400">@Model.RefDate.Year</div>
        </div>
    </div>

    <!-- Enler -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">

        <!-- En çok satan personel -->
        <div class="bg-white rounded-2xl p-4 border border-slate-100 shadow-sm hover:shadow-md transition-shadow">
            <div class="text-xs font-semibold text-slate-600">En Çok Satış Yapan Personel</div>
            @if (Model.TopSeller != null)
            {
                <div class="mt-2 font-bold">
                    @Model.TopSeller.SellerName
                    <span class="text-xs text-slate-400">(@Model.TopSeller.SellerCode)</span>
                </div>
                <div class="text-xs mt-1">
                    Tutar:
                    <span class="font-semibold text-emerald-600">
                        @Model.TopSeller.Amount.ToString("N2") ₺
                    </span>
                    · Miktar: @Model.TopSeller.Quantity.ToString("N2")
                </div>
                <div class="text-[11px] text-slate-400">Satır: @Model.TopSeller.Rows</div>
            }
            else
            {
                <div class="text-xs text-slate-400 mt-2">Veri yok</div>
            }
        </div>

        <!-- En çok alan cari -->
        <div class="bg-white rounded-2xl p-4 border border-slate-100 shadow-sm hover:shadow-md transition-shadow">
            <div class="text-xs font-semibold text-slate-600">En Çok Ürün Alan Cari</div>
            @if (Model.TopCustomer != null)
            {
                <div class="mt-2 font-bold">
                    @Model.TopCustomer.CustomerName
                    <span class="text-xs text-slate-400">(@Model.TopCustomer.CustomerCode)</span>
                </div>
                <div class="text-xs mt-1">
                    Miktar: @Model.TopCustomer.Quantity.ToString("N2")
                    · Tutar:
                    <span class="font-semibold text-emerald-600">
                        @Model.TopCustomer.Amount.ToString("N2") ₺
                    </span>
                </div>
                <div class="text-[11px] text-slate-400">Satır: @Model.TopCustomer.Rows</div>
            }
            else
            {
                <div class="text-xs text-slate-400 mt-2">Veri yok</div>
            }
        </div>

        <!-- En çok satan ürün -->
        <div class="bg-white rounded-2xl p-4 border border-slate-100 shadow-sm hover:shadow-md transition-shadow">
            <div class="text-xs font-semibold text-slate-600">En Çok Satan Ürün</div>
            @if (Model.TopProduct != null)
            {
                <div class="mt-2 font-bold">
                    @Model.TopProduct.StockName
                    <span class="text-xs text-slate-400">(@Model.TopProduct.StockCode)</span>
                </div>
                <div class="text-xs mt-1">
                    Miktar: @Model.TopProduct.Quantity.ToString("N2")
                    · Tutar:
                    <span class="font-semibold text-emerald-600">
                        @Model.TopProduct.Amount.ToString("N2") ₺
                    </span>
                </div>
                <div class="text-[11px] text-slate-400">Satır: @Model.TopProduct.Rows</div>
            }
            else
            {
                <div class="text-xs text-slate-400 mt-2">Veri yok</div>
            }
        </div>
    </div>

    <!-- Tablo / Mobil Kart -->
    <div class="bg-white rounded-2xl border overflow-hidden">

        <div class="px-4 py-3 border-b text-sm font-bold">
            Personel Bazlı En Çok Satılan Ürün
        </div>

        <!-- ✅ MOBİL: Kart Liste -->
        <div class="sa-cards p-3">
            @if (Model.SellersTopProducts.Any())
            {
                <div class="flex flex-col gap-3">
                    @foreach (var r in Model.SellersTopProducts)
                    {
                        <div class="rounded-2xl border border-slate-100 bg-white shadow-sm p-3">
                            <div class="flex items-start justify-between gap-3">
                                <div class="min-w-0">
                                    <div class="text-[11px] text-slate-500">Personel</div>
                                    <div class="text-sm font-semibold text-slate-900 break-words">
                                        @r.SellerName
                                        <span class="text-slate-400 font-normal">(@r.SellerCode)</span>
                                    </div>

                                    <div class="mt-2 text-[11px] text-slate-500">Ürün</div>
                                    <div class="text-sm font-semibold text-slate-900 break-words">
                                        @r.StockName
                                        <span class="text-slate-400 font-normal">(@r.StockCode)</span>
                                    </div>
                                </div>

                                <div class="shrink-0 text-right">
                                    <div class="text-[11px] text-slate-500">Tutar</div>
                                    <div class="text-sm font-bold text-emerald-600">
                                        @r.Amount.ToString("N2") ₺
                                    </div>

                                    <div class="mt-2 text-[11px] text-slate-500">Miktar</div>
                                    <div class="text-sm font-semibold text-slate-900">
                                        @r.Quantity.ToString("N2")
                                    </div>

                                    <div class="mt-2 text-[11px] text-slate-500">Satır</div>
                                    <div class="text-sm font-semibold text-slate-900">
                                        @r.Rows
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="px-4 py-10 text-center text-slate-400 text-xs">
                    Veri bulunamadı
                </div>
            }
        </div>

        <!-- ✅ WEB: Tablo -->
        <div class="sa-table">
            <div class="overflow-x-auto">
                <table class="min-w-full text-xs">
                    <thead class="bg-slate-50">
                        <tr>
                            <th class="px-4 py-3">Personel</th>
                            <th class="px-4 py-3">Ürün</th>
                            <th class="px-4 py-3 text-right">Tutar</th>
                            <th class="px-4 py-3 text-right">Miktar</th>
                            <th class="px-4 py-3 text-right">Satır</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.SellersTopProducts.Any())
                        {
                            foreach (var r in Model.SellersTopProducts)
                            {
                                <tr class="border-t hover:bg-slate-50">
                                    <td class="px-4 py-2">
                                        @r.SellerName
                                        <span class="text-slate-400">(@r.SellerCode)</span>
                                    </td>
                                    <td class="px-4 py-2">
                                        @r.StockName
                                        <span class="text-slate-400">(@r.StockCode)</span>
                                    </td>
                                    <td class="px-4 py-2 text-right font-semibold text-emerald-600">
                                        @r.Amount.ToString("N2") ₺
                                    </td>
                                    <td class="px-4 py-2 text-right">@r.Quantity.ToString("N2")</td>
                                    <td class="px-4 py-2 text-right">@r.Rows</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="px-4 py-6 text-center text-slate-400">
                                    Veri bulunamadı
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>