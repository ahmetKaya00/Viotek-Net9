@model ViotekErp.Models.SiparisListViewModel
@using System.Security.Claims

@{
    Layout = "_ErpLayout";
    ViewData["Title"] = "Siparişler";
    var currentSort = ViewContext.HttpContext.Request.Query["sort"].ToString();

    var role = User?.FindFirst(ClaimTypes.Role)?.Value ?? "";
    var isAdmin = string.Equals(role, "Admin", StringComparison.OrdinalIgnoreCase);
}

<style>
    /* Tailwind breakpointlerinden bağımsız kesin çözüm */
    .orders-cards { display: none; }   /* default: web */
    .orders-table { display: block; }  /* default: web */

    @@media (max-width: 640px) {
        .orders-cards { display: block; }
        .orders-table { display: none; }
    }
</style>

<div class="min-h-[calc(100vh-64px)] bg-slate-50 px-6 py-6 space-y-6">

    <!-- Başlık + Özet -->
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-3">
        <div>
            <h1 class="text-2xl md:text-3xl font-bold text-slate-900">Siparişler</h1>
            <p class="text-xs text-slate-500 mt-1">
                SIPARISLER tablosu üzerinden filtrelenmiş sipariş listesi (Evrak bazlı).
            </p>
        </div>
@if (isAdmin)
{
        <div class="flex flex-wrap gap-3 text-xs">
            <div class="px-3 py-2 rounded-xl bg-white border border-slate-100 shadow-sm">
                <p class="text-slate-500">Toplam Kayıt</p>
                <p class="font-semibold text-slate-900">@Model.TotalCount</p>
            </div>

            <div class="px-3 py-2 rounded-xl bg-white border border-slate-100 shadow-sm">
                <p class="text-slate-500">Toplam Tutar (KDV Hariç)</p>
                <p class="font-semibold text-emerald-600">
                    @Model.TotalAmount.ToString("N2")
                </p>
                <p class="text-[11px] text-indigo-600 mt-1">
                    KDV %20 Dahil: @Model.TotalAmountKdvli.ToString("N2")
                </p>
            </div>

            <div class="px-3 py-2 rounded-xl bg-white border border-slate-100 shadow-sm">
                <p class="text-slate-500">Toplam Miktar</p>
                <p class="font-semibold text-slate-900">
                    @Model.TotalQuantity.ToString("N2")
                </p>
            </div>
        </div>
}
    </div>
    <!-- Filtre Formu -->
    <div class="bg-white rounded-2xl shadow-sm border border-slate-100 p-4">
        <form method="get" class="grid grid-cols-1 md:grid-cols-4 gap-4 items-end">
            <!-- Başlangıç Tarihi -->
            <div>
                <label class="block text-xs font-semibold text-slate-600 mb-1">
                    Başlangıç Tarihi
                </label>
                <input type="date"
                       name="startDate"
                       value="@(Model.StartDate?.ToString("yyyy-MM-dd") ?? "")"
                       class="w-full rounded-lg border border-slate-200 px-3 py-2 text-sm
                              focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" />
            </div>

            <!-- Bitiş Tarihi -->
            <div>
                <label class="block text-xs font-semibold text-slate-600 mb-1">
                    Bitiş Tarihi
                </label>
                <input type="date"
                       name="endDate"
                       value="@(Model.EndDate?.ToString("yyyy-MM-dd") ?? "")"
                       class="w-full rounded-lg border border-slate-200 px-3 py-2 text-sm
                              focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" />
            </div>

            <!-- Arama -->
            <div>
                <label class="block text-xs font-semibold text-slate-600 mb-1">
                    Arama (Müşteri / Satıcı / Stok)
                </label>
                <input type="text"
                       name="search"
                       value="@Model.Search"
                       placeholder="120.01, 3 nolu satıcı, 153.01..."
                       class="w-full rounded-lg border border-slate-200 px-3 py-2 text-sm
                              focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" />
            </div>

            <!-- Gösterim + Butonlar -->
            <div class="flex flex-col gap-2">
                <div>
                    <label class="block text-xs font-semibold text-slate-600 mb-1">
                        Gösterim
                    </label>

                    <select name="pageSize"
                            class="w-full rounded-lg border border-slate-200 px-3 py-2 text-sm bg-white
                                   focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
                        <option value="10" selected="@(Model.PageSize == 10 ? "selected" : null)">10</option>
                        <option value="18" selected="@(Model.PageSize == 18 ? "selected" : null)">18</option>
                        <option value="25" selected="@(Model.PageSize == 25 ? "selected" : null)">25</option>
                        <option value="50" selected="@(Model.PageSize == 50 ? "selected" : null)">50</option>
                    </select>
                </div>

                <div class="flex gap-2">
                    <button type="submit"
                            class="flex-1 inline-flex items-center justify-center px-4 py-2 rounded-lg
                                   bg-indigo-600 text-white text-sm font-medium shadow-sm
                                   hover:bg-indigo-700 transition">
                        Filtrele
                    </button>
                    <a asp-action="Index"
                       class="inline-flex items-center justify-center px-3 py-2 rounded-lg
                              border border-slate-200 text-xs text-slate-600 hover:bg-slate-50">
                        Temizle
                    </a>
                </div>
            </div>
        </form>
    </div>

    <!-- Liste Alanı -->
    <div class="bg-white rounded-2xl shadow-sm border border-slate-100 overflow-hidden">

        <!-- ✅ MOBİL: Kart liste -->
        <div class="orders-cards p-3">
            @if (Model.Items != null && Model.Items.Any())
            {
                <div class="flex flex-col gap-3">
                    @foreach (var s in Model.Items)
                    {
                        var musteriText = s.MusteriKod ?? "";
                        if (!string.IsNullOrEmpty(s.MusteriKod) &&
                            Model.MusteriAdlari != null &&
                            Model.MusteriAdlari.TryGetValue(s.MusteriKod, out var mAd))
                        {
                            musteriText = $"{s.MusteriKod} - {mAd}";
                        }

                        var saticiText = s.SaticiKod ?? "";
                        if (!string.IsNullOrEmpty(s.SaticiKod) &&
                            Model.SaticiAdlari != null &&
                            Model.SaticiAdlari.TryGetValue(s.SaticiKod, out var sAd))
                        {
                            saticiText = $"{s.SaticiKod} - {sAd}";
                        }

                        <div class="rounded-2xl border border-slate-100 bg-white shadow-sm p-3">
                            <div class="flex items-start justify-between gap-3">
                                <div class="min-w-0">
                                    <div class="text-[11px] text-slate-500">Tarih</div>
                                    <div class="text-sm font-semibold text-slate-900">
                                        @s.Tarih?.ToString("dd.MM.yyyy")
                                    </div>

                                    <div class="mt-2 text-[11px] text-slate-500">Evrak</div>
                                    <div class="text-sm font-semibold text-slate-900">
                                        @s.EvrakSeri @s.EvrakSira
                                    </div>
                                </div>

                                <div class="shrink-0 text-right">
                                    <div class="text-[11px] text-slate-500">Tutar (TL)</div>
                                    <div class="text-sm font-semibold text-emerald-600">
                                        @s.ToplamTutarTl.ToString("N2")
                                    </div>

                                    <div class="mt-2 text-[11px] text-slate-500">Miktar</div>
                                    <div class="text-sm font-semibold text-slate-900">
                                        @s.ToplamMiktar.ToString("N2")
                                    </div>
                                </div>
                            </div>

                            <div class="mt-3 grid grid-cols-1 gap-2">
                                <div class="rounded-xl bg-slate-50 border border-slate-100 p-2">
                                    <div class="text-[11px] text-slate-500">Müşteri</div>
                                    <div class="text-xs font-medium text-slate-900 break-words">
                                        @musteriText
                                    </div>
                                </div>

                                <div class="rounded-xl bg-slate-50 border border-slate-100 p-2">
                                    <div class="text-[11px] text-slate-500">Satıcı</div>
                                    <div class="text-xs font-medium text-slate-900 break-words">
                                        @saticiText
                                    </div>
                                </div>
                            </div>

                            <div class="mt-3 flex justify-end">
                                @if (!string.IsNullOrEmpty(s.EvrakSeri))
                                {
                                    <button type="button"
                                            class="js-siparis-detay inline-flex items-center justify-center px-3 py-2 rounded-lg
                                                   border border-slate-200 text-xs font-medium text-indigo-600 hover:bg-slate-50"
                                            data-seri="@s.EvrakSeri"
                                            data-sira="@s.EvrakSira">
                                        Detay
                                    </button>
                                }
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="px-4 py-10 text-center text-slate-400 text-xs">
                    Seçilen filtrelere göre sipariş bulunamadı.
                </div>
            }
        </div>

        <!-- ✅ WEB: Tablo (HER ZAMAN WEBDE TABLO) -->
        <div class="orders-table">
            <div class="overflow-x-auto">
                <table class="min-w-full text-left text-xs">
                    <thead class="bg-slate-50 border-b border-slate-100">
                        <tr>
                            <!-- Tarih (sort) -->
                            <th class="px-4 py-3 font-semibold text-slate-500">
                                <a href="@Url.Action("Index", new {
                                            page = Model.Page,
                                            pageSize = Model.PageSize,
                                            startDate = Model.StartDate?.ToString("yyyy-MM-dd"),
                                            endDate = Model.EndDate?.ToString("yyyy-MM-dd"),
                                            search = Model.Search,
                                            sort = (currentSort == "tarih_asc" ? "tarih_desc" : "tarih_asc")
                                        })"
                                   class="flex items-center gap-1 hover:underline">
                                    Tarih

                                    @if (currentSort == "tarih_asc") { <span>▲</span> }
                                    else if (currentSort == "tarih_desc") { <span>▼</span> }
                                    else { <span class="text-slate-300">↕</span> }
                                </a>
                            </th>

                            <th class="px-4 py-3 font-semibold text-slate-500">Müşteri</th>
                            <th class="px-4 py-3 font-semibold text-slate-500">Satıcı</th>
                            <th class="px-4 py-3 font-semibold text-slate-500">Evrak</th>

                            <th class="px-4 py-3 font-semibold text-slate-500 text-right">Toplam Miktar</th>
                            <th class="px-4 py-3 font-semibold text-slate-500 text-right">Toplam Tutar (TL)</th>
                            <th class="px-4 py-3 font-semibold text-slate-500 text-right">Detay</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (Model.Items != null && Model.Items.Any())
                        {
                            foreach (var s in Model.Items)
                            {
                                <tr class="border-b border-slate-50 hover:bg-slate-50/60 text-[11px]">
                                    <td class="px-4 py-2 whitespace-nowrap">
                                        @s.Tarih?.ToString("dd.MM.yyyy")
                                    </td>

                                    <td class="px-4 py-2 whitespace-nowrap">
                                        @{
                                            var musteriText = s.MusteriKod ?? "";
                                            if (!string.IsNullOrEmpty(s.MusteriKod) &&
                                                Model.MusteriAdlari != null &&
                                                Model.MusteriAdlari.TryGetValue(s.MusteriKod, out var mAd))
                                            {
                                                musteriText = $"{s.MusteriKod} - {mAd}";
                                            }
                                            @musteriText
                                        }
                                    </td>

                                    <td class="px-4 py-2 whitespace-nowrap">
                                        @{
                                            var saticiText = s.SaticiKod ?? "";
                                            if (!string.IsNullOrEmpty(s.SaticiKod) &&
                                                Model.SaticiAdlari != null &&
                                                Model.SaticiAdlari.TryGetValue(s.SaticiKod, out var sAd))
                                            {
                                                saticiText = $"{s.SaticiKod} - {sAd}";
                                            }
                                            @saticiText
                                        }
                                    </td>

                                    <td class="px-4 py-2 whitespace-nowrap font-semibold">
                                        @s.EvrakSeri @s.EvrakSira
                                    </td>

                                    <td class="px-4 py-2 text-right whitespace-nowrap">
                                        @s.ToplamMiktar.ToString("N2")
                                    </td>

                                    <td class="px-4 py-2 text-right whitespace-nowrap">
                                        @s.ToplamTutarTl.ToString("N2")
                                    </td>

                                    <td class="px-4 py-2 text-right whitespace-nowrap">
                                        @if (!string.IsNullOrEmpty(s.EvrakSeri))
                                        {
                                            <button type="button"
                                                    class="js-siparis-detay text-indigo-600 hover:underline"
                                                    data-seri="@s.EvrakSeri"
                                                    data-sira="@s.EvrakSira">
                                                Detay
                                            </button>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="px-4 py-6 text-center text-slate-400 text-xs">
                                    Seçilen filtrelere göre sipariş bulunamadı.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Sayfalama -->
        @if (Model.TotalPages > 1)
        {
            <div class="flex items-center justify-between px-4 py-3 border-t border-slate-100 text-[11px] text-slate-500">
                <div>
                    Sayfa @Model.Page / @Model.TotalPages
                </div>

                <div class="flex gap-1">
                    @if (Model.Page > 1)
                    {
                        <a href="@Url.Action("Index", new {
                                    page = Model.Page - 1,
                                    pageSize = Model.PageSize,
                                    startDate = Model.StartDate?.ToString("yyyy-MM-dd"),
                                    endDate = Model.EndDate?.ToString("yyyy-MM-dd"),
                                    search = Model.Search,
                                    sort = currentSort
                                })"
                           class="px-3 py-1 rounded-lg border border-slate-200 hover:bg-slate-50">
                            Önceki
                        </a>
                    }

                    @if (Model.Page < Model.TotalPages)
                    {
                        <a href="@Url.Action("Index", new {
                                    page = Model.Page + 1,
                                    pageSize = Model.PageSize,
                                    startDate = Model.StartDate?.ToString("yyyy-MM-dd"),
                                    endDate = Model.EndDate?.ToString("yyyy-MM-dd"),
                                    search = Model.Search,
                                    sort = currentSort
                                })"
                           class="px-3 py-1 rounded-lg border border-slate-200 hover:bg-slate-50">
                            Sonraki
                        </a>
                    }
                </div>
            </div>
        }
    </div>
</div>

<!-- Popup Modal -->
<div id="siparis-modal"
     class="fixed inset-0 z-50 hidden items-center justify-center bg-black/40 backdrop-blur-sm">
    <div class="bg-white rounded-2xl shadow-xl w-full max-w-3xl mx-4 max-h-[80vh] overflow-hidden flex flex-col">
        <div class="flex items-center justify-between px-4 py-3 border-b border-slate-100">
            <h2 class="text-sm font-semibold text-slate-900">
                Sipariş Detayı
            </h2>
            <button type="button"
                    id="siparis-modal-close"
                    class="w-7 h-7 rounded-full flex items-center justify-center text-slate-500 hover:bg-slate-100">
                ✕
            </button>
        </div>
        <div id="siparis-modal-body" class="p-4 overflow-auto text-xs">
            <!-- Detay içeriği buraya yüklenecek -->
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function () {
            const modal = document.getElementById("siparis-modal");
            const modalBody = document.getElementById("siparis-modal-body");
            const closeBtn = document.getElementById("siparis-modal-close");

            function openModal() {
                modal.classList.remove("hidden");
                modal.classList.add("flex");
            }

            function closeModal() {
                modal.classList.add("hidden");
                modal.classList.remove("flex");
                modalBody.innerHTML = "";
            }

            closeBtn.addEventListener("click", closeModal);

            modal.addEventListener("click", function (e) {
                if (e.target === modal) closeModal();
            });

            document.addEventListener("click", async function (e) {
                const btn = e.target.closest(".js-siparis-detay");
                if (!btn) return;

                const seri = btn.getAttribute("data-seri");
                const sira = btn.getAttribute("data-sira");

                if (!seri || !sira) return;

                try {
                    const url = "@Url.Action("DetayPartial", "Siparisler")"
                        + `?seri=${encodeURIComponent(seri)}&sira=${encodeURIComponent(sira)}`;

                    const res = await fetch(url);

                    if (!res.ok) {
                        const txt = await res.text();
                        modalBody.innerHTML =
                            "<div class='text-red-500 text-xs'>Detay yüklenirken hata: "
                            + res.status + " - " + txt + "</div>";
                    } else {
                        const html = await res.text();
                        modalBody.innerHTML = html;
                    }
                } catch {
                    modalBody.innerHTML =
                        "<div class='text-red-500 text-xs'>Detay yüklenirken hata oluştu.</div>";
                }

                openModal();
            });
        })();
    </script>
}