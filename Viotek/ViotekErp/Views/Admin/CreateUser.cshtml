@{
    Layout = "_ErpLayout";
    ViewData["Title"] = "Kullanıcı Ekle";
}

<div class="min-h-[calc(100vh-64px)] bg-slate-50 px-4 md:px-6 py-10">
    <div class="max-w-lg mx-auto bg-white rounded-2xl border border-slate-100 shadow-sm p-6">
        <div class="flex items-start justify-between gap-3">
            <div>
                <h1 class="text-xl font-bold text-slate-900">Kullanıcı Ekle</h1>
                <p class="text-xs text-slate-500 mt-1">
                    User için satıcı kodu seçimi zorunludur. Admin için gerekmez.
                </p>
            </div>
        </div>

        @if (ViewBag.Error != null)
        {
            <div class="mt-4 rounded-xl border border-red-100 bg-red-50 text-red-700 text-xs p-3">
                @ViewBag.Error
            </div>
        }

        <form method="post" class="mt-5 space-y-3" id="createUserForm">
            @Html.AntiForgeryToken()

            <div>
                <label class="block text-xs font-semibold text-slate-600 mb-1">Kullanıcı Adı</label>
                <input name="kullaniciAdi"
                       autocomplete="username"
                       class="w-full rounded-xl border border-slate-200 bg-slate-50 px-3 py-2 text-sm
                              focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" />
            </div>

            <div>
                <label class="block text-xs font-semibold text-slate-600 mb-1">Ad Soyad</label>
                <input name="adSoyad"
                       autocomplete="name"
                       class="w-full rounded-xl border border-slate-200 bg-slate-50 px-3 py-2 text-sm
                              focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" />
            </div>

            <div>
                <label class="block text-xs font-semibold text-slate-600 mb-1">Şifre</label>
                <input name="sifre"
                       type="password"
                       autocomplete="new-password"
                       class="w-full rounded-xl border border-slate-200 bg-slate-50 px-3 py-2 text-sm
                              focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" />
            </div>

            <div>
                <label class="block text-xs font-semibold text-slate-600 mb-1">Rol</label>
                <select name="rol" id="rolSelect"
                        class="w-full rounded-xl border border-slate-200 bg-white px-3 py-2 text-sm
                               focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
                    <option value="User" selected>User</option>
                    <option value="Admin">Admin</option>
                </select>
            </div>

            <!-- ✅ Satıcı kodu -->
            <div id="saticiWrap">
                <label class="block text-xs font-semibold text-slate-600 mb-1">
                    Sipariş Satıcı Kodu (sip_satici_kod)
                </label>

                <select name="sipSaticiKod" id="sipSaticiKod"
                        class="w-full rounded-xl border border-slate-200 bg-white px-3 py-2 text-sm
                               focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
                    <option value="">Seçiniz...</option>

                    @* Controller'dan ViewBag.Saticilar = List<string> olarak gelecek *@
                    @if (ViewBag.Saticilar != null)
                    {
                        foreach (var kod in (IEnumerable<string>)ViewBag.Saticilar)
                        {
                            <option value="@kod">@kod</option>
                        }
                    }
                </select>

                <p class="mt-1 text-[11px] text-slate-400">
                    User rolü seçiliyse zorunlu. Admin rolünde otomatik boş bırakılır.
                </p>
            </div>

            <div class="flex gap-2 pt-2">
                <button type="submit"
                        class="flex-1 rounded-xl bg-indigo-600 text-white py-2 text-sm font-semibold hover:bg-indigo-700 transition">
                    Kaydet
                </button>

                <a asp-action="Users"
                   class="px-4 py-2 rounded-xl bg-slate-100 text-slate-700 text-sm font-semibold hover:bg-slate-200 transition">
                    Vazgeç
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
<script>
    (function () {
        const rol = document.getElementById("rolSelect");
        const wrap = document.getElementById("saticiWrap");
        const satici = document.getElementById("sipSaticiKod");
        const form = document.getElementById("createUserForm");

        function sync() {
            const isAdmin = (rol.value || "").toLowerCase() === "admin";
            if (isAdmin) {
                wrap.style.display = "none";
                satici.value = "";
                satici.removeAttribute("required");
            } else {
                wrap.style.display = "block";
                satici.setAttribute("required", "required");
            }
        }

        rol.addEventListener("change", sync);
        sync();

        // Extra: client-side zorunluluk kontrolü
        form.addEventListener("submit", function (e) {
            const isAdmin = (rol.value || "").toLowerCase() === "admin";
            if (!isAdmin && (!satici.value || satici.value.trim() === "")) {
                e.preventDefault();
                alert("User için Sipariş Satıcı Kodu (sip_satici_kod) seçmek zorunludur.");
            }
        });
    })();
</script>
}