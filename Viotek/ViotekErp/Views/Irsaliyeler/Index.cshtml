@model ViotekErp.Models.IrsaliyeListViewModel

@{
    Layout = "_ErpLayout";
    ViewData["Title"] = "İrsaliyeler";
}

<style>
    /* Tailwind breakpointlerinden bağımsız kesin çözüm */
    .irs-cards { display: none; }  /* default: web */
    .irs-table { display: block; } /* default: web */

    @@media (max-width: 640px) {
        .irs-cards { display: block; }
        .irs-table { display: none; }
    }
</style>

<div class="min-h-[calc(100vh-64px)] bg-slate-50 px-6 py-6 space-y-6">

    <!-- Başlık + Özet -->
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-3">
        <div>
            <h1 class="text-2xl md:text-3xl font-bold text-slate-900">İrsaliyeler</h1>
            <p class="text-xs text-slate-500 mt-1">
                Tarih aralığı / arama / fatura durumuna göre irsaliye listesi.
            </p>
        </div>

        <div class="flex flex-wrap gap-3 text-xs">
            <div class="px-3 py-2 rounded-xl bg-white border border-slate-100 shadow-sm">
                <p class="text-slate-500">Toplam Kayıt</p>
                <p class="font-semibold text-slate-900">@Model.TotalCount</p>
            </div>
        </div>
    </div>

    <!-- Filtre Formu (Siparişler ile aynı düzen) -->
    <div class="bg-white rounded-2xl shadow-sm border border-slate-100 p-4">
        <form method="get" class="grid grid-cols-1 md:grid-cols-4 gap-4 items-end">

            <!-- Başlangıç -->
            <div>
                <label class="block text-xs font-semibold text-slate-600 mb-1">
                    Başlangıç Tarihi
                </label>
                <input type="date"
                       name="startDate"
                       value="@(Model.StartDate?.ToString("yyyy-MM-dd") ?? "")"
                       class="w-full rounded-lg border border-slate-200 px-3 py-2 text-sm
                              focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" />
            </div>

            <!-- Bitiş -->
            <div>
                <label class="block text-xs font-semibold text-slate-600 mb-1">
                    Bitiş Tarihi
                </label>
                <input type="date"
                       name="endDate"
                       value="@(Model.EndDate?.ToString("yyyy-MM-dd") ?? "")"
                       class="w-full rounded-lg border border-slate-200 px-3 py-2 text-sm
                              focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" />
            </div>

            <!-- Arama -->
            <div>
                <label class="block text-xs font-semibold text-slate-600 mb-1">
                    Arama (Cari / Seri-Sıra / Ürün)
                </label>
                <input type="text"
                       name="search"
                       value="@(Model.Search ?? "")"
                       placeholder="Cari kod, ünvan, seri-sıra, ürün..."
                       class="w-full rounded-lg border border-slate-200 px-3 py-2 text-sm
                              focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" />
            </div>

            <!-- Durum + Butonlar -->
            <div class="flex flex-col gap-2">

                <div>
                    <label class="block text-xs font-semibold text-slate-600 mb-1">
                        Fatura Durumu
                    </label>
                    <select name="status"
                            class="w-full rounded-lg border border-slate-200 px-3 py-2 text-sm bg-white
                                   focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
                        <option value="all" selected="@(Model.Status == "all" ? "selected" : null)">Hepsi</option>
                        <option value="waiting" selected="@(Model.Status == "waiting" ? "selected" : null)">Fatura Bekliyor</option>
                        <option value="invoiced" selected="@(Model.Status == "invoiced" ? "selected" : null)">Faturalandı</option>
                    </select>
                </div>

                <div class="flex gap-2">
                    <button type="submit"
                            class="flex-1 inline-flex items-center justify-center px-4 py-2 rounded-lg
                                   bg-indigo-600 text-white text-sm font-medium shadow-sm
                                   hover:bg-indigo-700 transition">
                        Filtrele
                    </button>

                    <a asp-action="Index" asp-controller="Irsaliyeler"
                       class="inline-flex items-center justify-center px-3 py-2 rounded-lg
                              border border-slate-200 text-xs text-slate-600 hover:bg-slate-50">
                        Temizle
                    </a>
                </div>

            </div>

            <input type="hidden" name="pageSize" value="@Model.PageSize" />
        </form>
    </div>

    <!-- Liste Alanı -->
    <div class="bg-white rounded-2xl shadow-sm border border-slate-100 overflow-hidden">

        <!-- ✅ MOBİL: Kart Liste -->
        <div class="irs-cards p-3">
            @if (Model.Items != null && Model.Items.Any())
            {
                <div class="flex flex-col gap-3">
                    @foreach (var row in Model.Items)
                    {
                        var isInvoiced = row.FaturaDurumu == "Faturalandı";

                        <div class="rounded-2xl border border-slate-100 bg-white shadow-sm p-3">
                            <div class="flex items-start justify-between gap-3">
                                <div class="min-w-0">
                                    <div class="text-[11px] text-slate-500">Tarih</div>
                                    <div class="text-sm font-semibold text-slate-900">
                                        @row.Tarih?.ToString("dd.MM.yyyy")
                                    </div>

                                    <div class="mt-2 text-[11px] text-slate-500">İrsaliye</div>
                                    <div class="text-sm font-semibold text-slate-900">
                                        @row.EvrakSeri <span class="text-slate-400 font-normal">@row.EvrakSira</span>
                                    </div>
                                </div>

                                <div class="shrink-0 text-right">
                                    <div class="text-[11px] text-slate-500">Durum</div>
                                    @if (isInvoiced)
                                    {
                                        <span class="inline-flex items-center rounded-full px-2 py-1 text-[11px]
                                                     bg-emerald-50 text-emerald-700 border border-emerald-100">
                                            Faturalandı
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="inline-flex items-center rounded-full px-2 py-1 text-[11px]
                                                     bg-amber-50 text-amber-700 border border-amber-100">
                                            Fatura Bekliyor
                                        </span>
                                    }
                                </div>
                            </div>

                            <div class="mt-3 grid grid-cols-1 gap-2">
                                <div class="rounded-xl bg-slate-50 border border-slate-100 p-2">
                                    <div class="text-[11px] text-slate-500">Cari</div>
                                    <div class="text-xs font-semibold text-slate-900 break-words">
                                        @row.CariUnvan
                                    </div>
                                    <div class="text-[11px] text-slate-400 mt-1">
                                        @row.CariKod
                                    </div>
                                </div>

                                <div class="rounded-xl bg-slate-50 border border-slate-100 p-2">
                                    <div class="text-[11px] text-slate-500">Ürün</div>
                                    <div class="text-xs font-semibold text-slate-900 break-words">
                                        @row.IlkUrunAdi
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="px-4 py-10 text-center text-slate-400 text-xs">
                    Seçilen filtrelere göre irsaliye bulunamadı.
                </div>
            }

            <!-- Mobil Sayfalama -->
            @if (Model.TotalPages > 1)
            {
                <div class="mt-3 flex items-center justify-between px-1 text-[11px] text-slate-500">
                    <div>Sayfa @Model.Page / @Model.TotalPages</div>

                    <div class="flex gap-1">
                        @if (Model.Page > 1)
                        {
                            <a href="@Url.Action("Index", "Irsaliyeler", new {
                                    page = Model.Page - 1,
                                    pageSize = Model.PageSize,
                                    startDate = Model.StartDate?.ToString("yyyy-MM-dd"),
                                    endDate = Model.EndDate?.ToString("yyyy-MM-dd"),
                                    search = Model.Search,
                                    status = Model.Status
                                })"
                               class="px-3 py-1 rounded-lg border border-slate-200 hover:bg-slate-50">
                                Önceki
                            </a>
                        }

                        @if (Model.Page < Model.TotalPages)
                        {
                            <a href="@Url.Action("Index", "Irsaliyeler", new {
                                    page = Model.Page + 1,
                                    pageSize = Model.PageSize,
                                    startDate = Model.StartDate?.ToString("yyyy-MM-dd"),
                                    endDate = Model.EndDate?.ToString("yyyy-MM-dd"),
                                    search = Model.Search,
                                    status = Model.Status
                                })"
                               class="px-3 py-1 rounded-lg border border-slate-200 hover:bg-slate-50">
                                Sonraki
                            </a>
                        }
                    </div>
                </div>
            }
        </div>

        <!-- ✅ WEB: Tablo (webde aynı kalsın) -->
        <div class="irs-table">
            <div class="overflow-x-auto">
                <table class="min-w-full text-left text-xs">
                    <thead class="bg-slate-50 border-b border-slate-100">
                        <tr>
                            <th class="px-4 py-3 font-semibold text-slate-500">Tarih</th>
                            <th class="px-4 py-3 font-semibold text-slate-500">İrsaliye No</th>
                            <th class="px-4 py-3 font-semibold text-slate-500">Cari</th>
                            <th class="px-4 py-3 font-semibold text-slate-500">Ürün</th>
                            <th class="px-4 py-3 font-semibold text-slate-500 text-right">Durum</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (Model.Items != null && Model.Items.Any())
                        {
                            foreach (var row in Model.Items)
                            {
                                var isInvoiced = row.FaturaDurumu == "Faturalandı";

                                <tr class="border-b border-slate-50 hover:bg-slate-50/60 text-[11px]">
                                    <td class="px-4 py-2 whitespace-nowrap">
                                        @row.Tarih?.ToString("dd.MM.yyyy")
                                    </td>

                                    <td class="px-4 py-2 whitespace-nowrap">
                                        <div class="font-semibold text-slate-900">@row.EvrakSeri</div>
                                        <div class="text-slate-400">@row.EvrakSira</div>
                                    </td>

                                    <td class="px-4 py-2 whitespace-nowrap">
                                        <div class="font-semibold text-slate-900">@row.CariUnvan</div>
                                        <div class="text-slate-400">@row.CariKod</div>
                                    </td>

                                    <td class="px-4 py-2">
                                        <div class="max-w-[520px] text-slate-700">
                                            @row.IlkUrunAdi
                                        </div>
                                    </td>

                                    <td class="px-4 py-2 text-right whitespace-nowrap">
                                        @if (isInvoiced)
                                        {
                                            <span class="inline-flex items-center rounded-full px-2 py-1 text-[11px]
                                                         bg-emerald-50 text-emerald-700 border border-emerald-100">
                                                Faturalandı
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="inline-flex items-center rounded-full px-2 py-1 text-[11px]
                                                         bg-amber-50 text-amber-700 border border-amber-100">
                                                Fatura Bekliyor
                                            </span>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="px-4 py-6 text-center text-slate-400 text-xs">
                                    Seçilen filtrelere göre irsaliye bulunamadı.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Web Sayfalama -->
            @if (Model.TotalPages > 1)
            {
                <div class="flex items-center justify-between px-4 py-3 border-t border-slate-100 text-[11px] text-slate-500">
                    <div>
                        Sayfa @Model.Page / @Model.TotalPages
                    </div>

                    <div class="flex gap-1">
                        @if (Model.Page > 1)
                        {
                            <a href="@Url.Action("Index", "Irsaliyeler", new {
                                    page = Model.Page - 1,
                                    pageSize = Model.PageSize,
                                    startDate = Model.StartDate?.ToString("yyyy-MM-dd"),
                                    endDate = Model.EndDate?.ToString("yyyy-MM-dd"),
                                    search = Model.Search,
                                    status = Model.Status
                                })"
                               class="px-3 py-1 rounded-lg border border-slate-200 hover:bg-slate-50">
                                Önceki
                            </a>
                        }

                        @if (Model.Page < Model.TotalPages)
                        {
                            <a href="@Url.Action("Index", "Irsaliyeler", new {
                                    page = Model.Page + 1,
                                    pageSize = Model.PageSize,
                                    startDate = Model.StartDate?.ToString("yyyy-MM-dd"),
                                    endDate = Model.EndDate?.ToString("yyyy-MM-dd"),
                                    search = Model.Search,
                                    status = Model.Status
                                })"
                               class="px-3 py-1 rounded-lg border border-slate-200 hover:bg-slate-50">
                                Sonraki
                            </a>
                        }
                    </div>
                </div>
            }
        </div>
    </div>

</div>